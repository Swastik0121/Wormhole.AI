{
  "manifest_version": 3,
  "name": "Wormhole AI",
  "version": "1.0.0",
  "description": "Instantly teleport conversation context between Gemini, ChatGPT, and Claude.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_icon": "icons/icon128.png"
  },
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["scripts/chatgpt-content.js"]
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["scripts/claude-content.js"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["scripts/gemini-content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}